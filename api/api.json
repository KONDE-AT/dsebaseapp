  "basePath": "/exist/restxq/dsebaseapp/api",
  "tags": [
    {
      "name": "about",
      "description": "About the current API"
    },
    {
      "name": "collections",
      "description": "Methods about collections"
    },
    {
      "name": "documents",
      "description": "Methods about documents"
    },
    {
      "name": "entities",
      "description": "Methods about entities"
    },
    {
      "name": "kwic",
      "description": "Keyword in Context (full text search)"
    }
  ],
  "paths": {
  "/about": {
      "get": {
        "tags": [
          "about"
        ],
        "summary": "API-Endpoint to list all entry points of this current API",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'json', alternative is 'xml'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/collections": {
      "get": {
        "tags": [
          "collections"
        ],
        "summary": "API-Endpoint to list all child collections of the app's data collection",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'json', alternative is 'xml'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/collections/{collectionId}": {
      "get": {
        "tags": [
          "documents"
        ],
        "summary": "List all documents stored in the passed in collection",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "collectionId",
            "in": "path",
            "description": "ID of the document to return",
            "required": true,
            "type": "string"
          },
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'json', alternative is 'xml'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "collectionID not found"
          }
        }
      }
    },
    "/collections/{collectionId}/{documentId}": {
      "get": {
        "tags": [
          "documents"
        ],
        "summary": "Get an XML/TEI version of a document.",
        "produces": [
          "application/xml"
        ],
        "parameters": [
          {
            "name": "collectionId",
            "in": "path",
            "description": "ID of the document to return",
            "required": true,
            "type": "string"
          },
          {
            "name": "documentId",
            "in": "path",
            "description": "ID of the document to return",
            "required": true,
            "type": "string"
          },
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'xml', alternative is 'text'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "document not found"
          }
        }
      }
    },
    "/entity-types": {
      "get": {
        "tags": [
          "entities"
        ],
        "summary": "List all entity-types",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'json', alternative is 'xml'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/entities": {
      "get": {
        "tags": [
          "entities"
        ],
        "summary": "List all entities located in the app's indices collections.",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "The format of the response, defaults to 'json', alternative is 'xml'",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/entities/{entityId}": {
      "get": {
        "tags": [
          "entities"
        ],
        "summary": "List all documents stored in the passed in collection",
        "produces": [
          "application/xml"
        ],
        "parameters": [
          {
            "name": "entityId",
            "in": "path",
            "description": "ID of the entity to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "entityId not found"
          }
        }
      }
    },
       "/kwic/collections/{collectionId}": {
      "get": {
        "tags": [
          "kwic"
        ],
        "summary": "API-Endpoint to perform a fulltext search over passed in collection. Retuns a KWIC snippet",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "collectionId",
            "in": "path",
            "description": "ID of the collection which should be searched",
            "required": true,
            "type": "string"
          },
          {
            "name": "q",
            "in": "query",
            "description": "The query string. You can use '*' on the string's end as wildcard",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "collectionID not found"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "About the ACDH",
    "url": "http://acdh.oeaw.ac.at"
  }
}